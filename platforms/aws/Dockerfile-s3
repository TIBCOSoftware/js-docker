
ARG JASPERREPORTS_SERVER_VERSION

ENV JASPERREPORTS_SERVER_VERSION		${JASPERREPORTS_SERVER_VERSION:-7.5.0}

FROM jasperserver-pro:${JASPERREPORTS_SERVER_VERSION}

COPY scripts /

# load AWS CLI
RUN apt-get update > /dev/null && \
	apt-get install -y --no-install-recommends apt-utils  > /dev/null && \
	apt-get install -y \
		python3 \
        python3-pip \
        groff \
        less > /dev/null && \
    pip3 install awscli --upgrade && \
    rm -rf /var/lib/apt/lists/* && \
	chmod +x /*.sh && \
    ls -lsa /

ENTRYPOINT ["/entrypoint-aws.sh"]

# Default action executed by entrypoint script.
CMD ["run"]

