# 7.2.0
#JAVA_BASE_IMAGE=openjdk:8-jre
#TOMCAT_BASE_IMAGE=tomcat:9.0.17-jre8
#JASPERREPORTS_SERVER_VERSION=7.2.0
#JASPERREPORTS_SERVER_IMAGE_TAG=7.2.0

# 7.5.0 - Docker Hub. Debian based
# JAVA_BASE_IMAGE=openjdk:11.0-slim
